<%= turbo_include_tags %>
<%= turbo_stream_from "contestants" %>
<main class="container">
  <div class="header">
    <h2>Contestants</h2>
    <%= link_to "New contestant",
                new_contestant_path,
                class: "btn btn--primary",
                data: { turbo_frame: dom_id(Contestant.new) } %>
  </div>
  <%= turbo_frame_tag Contestant.new %>
  <%= turbo_frame_tag "contestants" do %>
    <% @contestants.each do |contestant| %>
      <%= render partial: "contestant_card", locals: { contestant: contestant } %>
    <% end %>
  <% end %>
</main>