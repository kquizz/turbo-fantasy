<%= turbo_frame_tag league do %>
  <div class="league">
    <%= link_to league.name, league_path(league), data: { turbo_frame: "_top"} %>
    <div class="league__event">
      Event: <%= league.event.title %> 
    </div>
    <div class="league__actions">
      <%= button_to "Delete",
                    league_path(league),
                    method: :delete,
                    form: { data: { turbo_frame: "_top" } },
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_league_path(league),
                  class: "btn btn--light" %>
    </div>
    </div>
  </div>
<% end %>