<%= simple_form_for event, html: { class: "event form" } do |f| %>
  <% if event.errors.any? %>
    <div class="error-message">
      <%= event.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>