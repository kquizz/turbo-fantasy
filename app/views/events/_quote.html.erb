<div class="event">
  <%= link_to event.name, event_path(event) %>
  <div class="event__actions">
    <%= button_to "Delete",
                  event_path(event),
                  method: :delete,
                  class: "btn btn--light" %>
    <%= link_to "Edit",
                edit_event_path(event),
                class: "btn btn--light" %>
  </div>
</div>